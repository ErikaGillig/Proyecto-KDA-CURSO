<div class="container" style="margin:auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3> Area de modificado </h3>
            <form action="/admin/novedades/modificar" method="post">
                <input= type="hidden" value="{{novedad.id}}" name="id">

                    <div class="mb-3 row">
                        <label for=""> Titulo </label>
                        <input type="text" class="form-control" name="titulo" value=" {{novedad.titulo}}">
                    </div>
                     <div class="mb-3 row">
                        <label for=""> Sub-Titulo </label>
                        <input type="text" class="form-control" name="titulo" value=" {{novedad.subtitulo}}">
                    </div>
                     <div class="mb-3 row">
                         <label for=""> Cuerpo </label>
                         <textarea class="form-control" name="cuerpo">{{novedad.cuerpo}}
                        </textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Modificar</button>
            </form>  
                   
        </div>
    </div>
    {{#if error}}
    {{message}}
    {{/if}}